<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".workInProgress">

    <include
        android:id="@+id/toolbarWorkConfirmation"
        layout="@layout/action_bar_onlyback" />

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/toolbarWorkConfirmation"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Allocated Serviceman:"
                android:textSize="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/profilePicture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_person_black_200dp"
                    android:background="@drawable/circle2">
                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    >

                    <TextView
                        android:id="@+id/WC_userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Abdul Boshir"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textSize="23dp"
                        />
                    <TextView
                        android:id="@+id/WC_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10, Road-12,Dhaka"
                        android:textStyle="bold"
                        android:textSize="23dp"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Rating: "
                    android:textSize="20dp"
                    android:layout_weight=".7"

                    />


                <TextView
                    android:id="@+id/WC_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4.5/5 "
                    android:textStyle="bold"
                    android:textSize="23dp"
                    android:layout_weight=".5"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:hint="Contact Number:"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/WC_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+8801234567891"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    android:layout_weight=".5"
                    />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="Work Information"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/WC_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TV Repair"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="23dp"
                />




            <TextView
                android:id="@+id/WC_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Curabitur suscipit, consectetur adipiscing elit.
"
                android:textStyle="bold"
                android:textSize="23dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:layout_marginTop="15dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Requested Date:"
                    android:textSize="20dp"
                    android:layout_weight=".8"
                    />

                <TextView
                    android:id="@+id/WC_requestedDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="28/02/2020"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    android:layout_weight=".5"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Start Work:"
                    android:textSize="20dp"
                    android:layout_weight=".8"
                    />

                <TextView
                    android:id="@+id/WC_startTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="23/04/2020 12:59 AM"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    android:layout_weight=".5"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Price: (TK)"
                    android:textSize="20dp"
                    android:layout_weight=".8"
                    />

                <TextView
                    android:id="@+id/WC_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2000"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    android:layout_weight=".5"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Status:"
                    android:textSize="20dp"
                    android:layout_weight=".8"
                    />

                <TextView
                    android:id="@+id/WC_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="In Progress"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight=".5"
                    />

            </LinearLayout>


            <Button
                android:id="@+id/WC_startButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_signup"
                android:text="Start work"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:layout_marginTop="16dp"

                android:clickable="true"
                android:padding="16dp"/>

            <Button
                android:id="@+id/WC_cancelButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_signup"
                android:text="Cancel work"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:padding="16dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</RelativeLayout>