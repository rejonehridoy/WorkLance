    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".workInProgress">

    <include
        android:id="@+id/toolbarServicemanPriceConfirmation"
        layout="@layout/action_bar_onlyback" />

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/toolbarServicemanPriceConfirmation"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work from"
                android:textSize="20dp"
                >

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/profilePicture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_person_black_200dp"
                    android:background="@drawable/circle2">
                </ImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    >

                    <TextView
                        android:id="@+id/SPC_userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rejone E Rasul Hridoy"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textSize="23dp"
                        ></TextView>

                    <TextView
                        android:id="@+id/SPC_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="House no. 10, Road no. 7, Dhanmondi, Dhaka"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textSize="23dp"
                        ></TextView>



                </LinearLayout>





            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Work Information"

                    android:textSize="20dp"
                    >
                </TextView>
                <TextView
                    android:id="@+id/SPC_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TV Repair"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    ></TextView>

                <TextView
                    android:id="@+id/SPC_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Curabitur spsum dtur adipiscing elit.
"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    ></TextView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:hint="Contact Number:"
                    android:textSize="20dp"
                    ></TextView>

                <TextView
                    android:id="@+id/SPC_contactNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+8801234567891"

                    android:textStyle="bold"
                    android:textSize="23dp"
                    ></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:hint="Requested Datetime:"
                    android:textSize="20dp"
                    ></TextView>

                <TextView
                    android:id="@+id/SPC_requestedTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="28/02/2020"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    ></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/SPC_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:hint="Price"
                    android:background="@android:color/transparent"
                    android:drawablePadding="12dp"
                    android:padding="8dp"
                    android:textColorHint="#666666"
                    android:maxLines="1"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_marginTop="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#666666" />



                <Button
                    android:id="@+id/SPC_confrimBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_signup"
                    android:text="Confirm Request"
                    android:textColor="#fff"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="10dp"
                    android:clickable="true"
                    android:layout_gravity="center_horizontal|center"
                    android:padding="16dp"/>
            </LinearLayout>


        </LinearLayout>



